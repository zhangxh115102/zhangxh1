body {
    background: #f7f7f7;
	height: 100%;
}

.titList {
    padding: 0 0.2rem;
    height: 0.88rem;
    display: -webkit-box;
    display: -webkit-flex;
    display: -moz-box;
    display: -ms-flexbox;
    display: flex;
    background: #ffffff;
    li {
        -webkit-box-flex: 1;
        -webkit-flex: 1;
        -moz-box-flex: 1;
        -ms-flex: 1;
        flex: 1;
        text-align: center;
        span {
            color: #aeaeae;
            font-size: 0.32rem;
            line-height: 0.84rem;
            display: inline-block;
        }
    }
    .active span {
        color: #38bbff;
        border-bottom: 0.04rem solid #38bbff;
    }
}
.hidden{
	height: 100%;
	overflow-x: hidden;
}
.tabSwiper {
    margin-top: 0.3rem;
    overflow: visible;
    .questionList {
        padding-left: 0.3rem;
        background: #fff;
        li {
            background: #fff;
            .questionTit {
                height: 0.88rem;
                border-top: 1px solid #e7e7e7;
                display: -webkit-box;
                display: -webkit-flex;
                display: -moz-box;
                display: -ms-flexbox;
                display: flex;
                -webkit-box-pack: justify;
                -webkit-justify-content: space-between;
                -moz-box-pack: justify;
                -ms-flex-pack: justify;
                justify-content: space-between;
                -webkit-box-align: center;
                -webkit-align-items: center;
                -moz-box-align: center;
                -ms-flex-align: center;
                align-items: center;
                a {
                    width: 6.6rem;
                    white-space: nowrap;
                    overflow: hidden;
                    text-overflow: ellipsis;
                    display: block;
                    color: #666666;
                    font-size: 0.32rem;
                    line-height: 0.88rem;
                }
                img {
                    display: block;
                    width: 0.14rem;
                    height: 0.22rem;
                    margin-right: 0.3rem;
                    -webkit-transform: rotate(90deg);
                    transform: rotate(90deg);
                }
                .rotate {
                    -webkit-animation: rotate 1s linear;
                    animation: rotate 1s linear;
                    -webkit-transform: rotate(270deg);
                    transform: rotate(270deg);
                }
                keyframes rotate {
                    0% {
                        -webkit-transform: rotate(0deg);
                    }
                    100% {
                        -webkit-transform: rotate(90deg);
                    }
                }
                -webkit-keyframes rotate {
                    0% {
                        -webkit-transform: rotate(0deg);
                        transform: rotate(0deg);
                    }
                    100% {
                        -webkit-transform: rotate(270deg);
                        transform: rotate(270deg);
                    }
                }
            }
            .answer {
                display: none;
                padding: 0.3rem;
                padding-left: 0;
                line-height: 0.42rem;
                font-size: 0.28rem;
                color: #aeaeae;
                span {
                    color: #38bbff;
                }
            }
        }
    }
}
